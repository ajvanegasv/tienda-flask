{
    "name": "Flask",
    "containerUser": "vscode",
    "image": "mcr.microsoft.com/vscode/devcontainers/python:3.9",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "cstrap.flask-snippets"
            ]
        }
    },
    "containerEnv": {
        "FLASK_APP": "app",
        "FLASK_DEBUG": "1"
    },
    "postCreateCommand": "pip install -r requirements.txt"
}